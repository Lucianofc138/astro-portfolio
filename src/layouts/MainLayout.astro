---
import HTMLLayout from '../layouts/HTMLLayout.astro';
import SkillsList from '../components/SkillsList.astro';
import data from "../data.en.json";

interface Skill {
    name: string;
    type: string;
    keywords: string[];
}
const skills: Skill[] = data.skills;
---

<HTMLLayout title="Spotifolio">
    <main>
        <div class="left-panel">
            <nav class="rounded">
                <ul class="nav-main-list rounded">
                    <li class="nav-main-list-item">
                        <a href="/astro-portfolio/index.html">
                            <span class="material-icons">work_history</span>
                            Experience
                        </a>
                    </li>
                    <li class="nav-main-list-item">
                        <a href="/astro-portfolio/education">
                            <span class="material-icons">school</span>
                            Education
                        </a>
                    </li>
                    <li class="nav-main-list-item">
                        <a href="/astro-portfolio/projects">
                            <span class="material-icons">dataset</span>
                            Projects
                        </a>
                    </li>
                    <li class="nav-main-list-item">
                        <a href="/astro-portfolio/blog">
                            <span class="material-icons">rss_feed</span>
                            Blog
                        </a>
                    </li>
                    <li class="nav-main-list-item">
                        <a href="/astro-portfolio/about-me">
                            <span class="material-icons">person</span>
                            About me
                        </a>
                    </li>
                </ul>
            </nav>
            <div class=" skills-container rounded">
                <SkillsList skills={skills} />
            </div>
        </div>
        <div class="right-panel" style="border-radius: 1em">
            <header>
                <div class="header-image" />
                <!-- <img class="header-image" src="photo.png" /> -->
                <div class="header-info">
                    <h1 style="flex: 1">Luciano Flores</h1>
                    <span style="align-self: flex-end">Fullstack developer / Software engineer</span>
                </div>
            </header>
            <div class="main-content" style="flex-direction: row">
                <slot />
            </div>
        </div>
    </main>
</HTMLLayout>

<style>
    main {
        height: 98vh;
        display: flex;
        flex-direction: row;
        gap: 1em;
    }
    .rounded {
        border-radius: 1em;
    }
    .spacing {
        padding: 1em;
    }
    .left-panel {
        display: flex;
        flex: 1;
        flex-direction: column;
        gap: 1em;
        justify-content: space-between;
        color: rgb(var(--light-gray));
    }
    nav {
        background-color: rgb(var(--dark-gray));
        padding: 0.5em;
    }
    .nav-main-list {
        list-style: none; /* Remove bullets from the list */
        display: flex;
        flex-direction: column;
        gap: 0.5em;
    }

    .nav-main-list-item {
        color: rgb(var(--light-gray));
    }

    .nav-main-list-item a {
        text-decoration: none; /* Remove underline */
        font-size: 20px;
        color: inherit; /* Inherit text color from the parent list item */
        display: flex;
        align-items: center;
        gap: 0.5em;
    }

    .nav-main-list-item:hover {
        color: rgb(var(--ligher-gray)); /* Change the text color on hover to your desired accent color */
    }

    .skills-container {
        flex: 1;
        background-color: rgb(var(--dark-gray));
    }
    .right-panel {
        display: flex;
        flex-direction: column;
        flex: 4;
        background-color: rgb(var(--dark-gray));
        color: white;
        overflow: clip;
    }
    header {
        /*background-color: lightpink;*/
        display: flex;
        flex-direction: row;
        flex: 1;
        padding: 2em;
        gap: 1em;
    }
    .header-image {
        background-color: orange;
        height: 200px;
        width: 200px;
        margin-right: 1em;
    }
    .header-info {
        /*background-color: blueviolet;*/
        flex: 1;
        flex-direction: column;
    }
    h1 {
        font-size: 64px;
    }
    .main-content {
        display: flex;
        flex: 3;
        padding: 2em;
    }

    @media (max-width: 768px) {
        main {
            flex-direction: column;
        }

        .left-panel, .right-panel {
            flex: none; /* Reset any flex settings */
            flex-direction: column;
            width: 100%; /* Make each panel full width */
            order: 0; /* Reset order to ensure left panel is on top */
        }

        .right-panel {
            /*order: 1; Set the right panel to be below the left panel */
        }

        .nav-main-list {
            flex-direction: row;
            flex-wrap: wrap
        }
    }


</style>
